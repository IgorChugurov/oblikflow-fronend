{
  "name": "Oblikflow-monorepo",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev:site": "pnpm --filter site dev",
    "dev:admin": "pnpm --filter admin dev",
    "dev:workspace": "pnpm --filter workspace dev",
    "dev:platform": "pnpm --filter platform dev",
    "dev:all": "pnpm --parallel --filter \"./site\" --filter \"./admin\" --filter \"./workspace\" --filter \"./platform\" dev",
    "build:site": "pnpm --filter site build",
    "build:admin": "pnpm --filter admin build",
    "build:workspace": "pnpm --filter workspace build",
    "build:platform": "pnpm --filter platform build",
    "build:all": "pnpm --filter site build && pnpm --filter admin build && pnpm --filter workspace build && pnpm --filter platform build",
    "lint": "pnpm --filter site lint && pnpm --filter admin lint && pnpm --filter workspace lint && pnpm --filter platform lint"
  },
  "devDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@tanstack/react-table": "^8.21.3",
    "react-hook-form": "^7.71.1",
    "zod": "^4.3.5"
  }
}
