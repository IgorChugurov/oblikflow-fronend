# pnpm workspace configuration
# Используется Vercel для правильной установки зависимостей

# Не поднимать зависимости в корень (каждый пакет должен иметь свои node_modules)
hoist=false

# Создавать symlinks для workspace пакетов
shamefully-hoist=false

# Строгая peer dependencies проверка
strict-peer-dependencies=false

# Автоматически устанавливать peer dependencies
auto-install-peers=true
